<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@color/colorPrimaryDark"
    android:layout_gravity="center">

    <TextView android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="player1 : 0" android:textStyle="bold"
        android:textColor="#ffff" android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player2 : 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
        android:textColor="#ffff" android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/player1" />
<Button android:id="@+id/reset" android:text="Reset" android:textColor="@color/colorPrimary"
    android:layout_width="wrap_content" android:textStyle="bold" android:background="#ffff"
    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100" android:paddingLeft="20dp"
       app:layout_constraintTop_toBottomOf="@id/player2"
        >

        <Button android:textColor="@color/colorPrimary"
            android:id="@+id/btn00"
            android:layout_width="0dp" android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="30" android:freezesText="true" android:textSize="40sp"
            />
        <Button  android:textColor="@color/colorPrimary"
            android:id="@+id/btn01" android:textStyle="bold" android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30" android:freezesText="true"
            />
        <Button  android:textColor="@color/colorPrimary"
            android:id="@+id/btn02" android:textStyle="bold" android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="30" android:freezesText="true"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:id="@+id/L2"
            android:layout_height="0dp"
            android:weightSum="100" android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/L1">
        <Button
            android:id="@+id/btn10"
            android:layout_width="0dp"   android:textColor="@color/colorPrimary"
            android:layout_height="150dp" android:textStyle="bold" android:textSize="40sp"
            android:layout_weight="30" android:freezesText="true"
            />
            <Button
                android:id="@+id/btn11"  android:textColor="@color/colorPrimary"
                android:layout_width="0dp" android:textStyle="bold"
                android:layout_height="match_parent" android:textSize="40sp"
                android:layout_weight="30" android:freezesText="true"
                />
            <Button
                android:id="@+id/btn12"  android:textColor="@color/colorPrimary"
                android:layout_width="0dp" android:textStyle="bold"
                android:layout_height="match_parent" android:textSize="40sp"
                android:layout_weight="30" android:freezesText="true"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100" android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/L2">
        <Button
            android:id="@+id/btn20"  android:textColor="@color/colorPrimary"
            android:layout_width="0dp" android:textSize="40sp"
            android:layout_height="150dp" android:textStyle="bold"
            android:layout_weight="30" android:freezesText="true"
            />
        <Button
            android:id="@+id/btn21"  android:textColor="@color/colorPrimary"
            android:layout_width="0dp" android:textSize="40sp"
            android:layout_height="match_parent" android:textStyle="bold"
            android:layout_weight="30" android:freezesText="true"
            />
        <Button
            android:id="@+id/btn22"  android:textColor="@color/colorPrimary"
            android:layout_width="0dp" android:textStyle="bold"
            android:layout_height="match_parent" android:textSize="40sp"
            android:layout_weight="30" android:freezesText="true"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>